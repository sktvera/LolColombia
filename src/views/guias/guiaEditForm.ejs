  <body>

    <%- include('../partials/header') %>


<form action="/guias/edit/<%=campeon.id%>?_method=PUT" method="POST">
    <div class="row product-detail">
        <div class="col-12 col-md-6">
            <label for="nombre" class="form-label">Nombre del campeon:</label>
            <input type="text" id="nombre" name="nombre" value="<%=campeon.nombre%>" class="form-input">
        </div>

        <div class="col-12 col-md-6">
            <label for="tipo" class="form-label">tipo:</label>
            <input type="text" id="tipo" name="tipo" value="<%=campeon.tipo%>" class="form-input">
        </div>

        <div class="col-12 col-md-6">
            <label for="vida" class="form-label">vida:</label>
            <input type="text" id="vida" name="vida" value="<%=campeon.vida%>" class="form-input">
        </div>

        <div class="col-12 col-md-6">
            <label for="mana" class="form-label">mana:</label>
            <input type="text" id="mana" name="mana" value="<%=campeon.mana%>" class="form-input">
        </div>

        <div class="col-12 col-md-6">
            <label for="regMana" class="form-label">regeneracion mana:</label>
            <input type="text" id="regMana" name="regMana" value="<%=campeon.regMana%>" class="form-input">
        </div>

        <div class="col-12 col-md-6">
            <label for="velocidad" class="form-label">velocidad:</label>
            <input type="text" id="velocidad" name="velocidad" value="<%=campeon.velocidad%>" class="form-input">
        </div>

        <div class="col-12 col-md-6">
            <label for="daño" class="form-label">daño:</label>
            <input type="text" id="daño" name="daño" value="<%=campeon.daño%>" class="form-input">
        </div>

        <div class="col-12 col-md-6">
            <label for="velAtaque" class="form-label">velocidad de ataque:</label>
            <input type="text" id="velAtaque" name="velAtaque" value="<%=campeon.velAtaque%>" class="form-input">
        </div>

        <div class="col-12 col-md-6">
            <label for="rango" class="form-label">rango:</label>
            <input type="text" id="rango" name="rango" value="<%=campeon.rango%>" class="form-input">
        </div>

        <div class="col-12 col-md-6">
            <label for="resMagia" class="form-label">resistecia a la magia:</label>
            <input type="text" id="resMagia" name="resMagia" value="<%=campeon.resMagia%>" class="form-input">
        </div>

        <div class="col-12">
            <button type="submit" class="buy-now-button">Guardar guia</button>
        </div>
   
    </div>
</form>



<%- include('../partials/footer') %>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>